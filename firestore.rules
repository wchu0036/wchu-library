rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to the "users" collection only for authenticated users
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow read/write access to the "books" collection only for authenticated users
    match /books/{bookId} {
      allow read, write: if true;
    }
  }
}